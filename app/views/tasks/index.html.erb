<% if logged_in? %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= "#{task.content}(#{task.status})" %></li>
    <% end %>
  </ul>
  <%= link_to 'タスク追加', new_task_path %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TaskList</h1>
      <%= link_to 'Sign up now!', new_user_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>